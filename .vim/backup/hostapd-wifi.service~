[Unit]
Description=Hostapd IEEE 802.11 AP, IEEE 802.1X/WPA/WPA2/EAP/RADIUS Authenticator
After=network.target

[Service]
Type=forking
ExecStart=/bin/sh /usr/services/hostapd-wifi/hostapd-wifi.sh start
ExecStop=/bin/sh /usr/services/hostapd-wifi/hostapd-wifi.sh stop
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
