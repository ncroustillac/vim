DESCRIPTION = "Project-specific script service to set GPIO Pins (GSM_MODULE_RESET, GSM_MODULE_PWR_ON) and rst GPIO PIns"
LICENSE = "CLOSED"

inherit systemd allarch

SYSTEMD_SERVICE_${PN} = "gsm-activate.service"
SYSTEMD_AUTO_ENABLE_${PN} = "enable"
FILESEXTRAPATHS_prepend := "${THISDIR}/${BPN}:"

SRC_URI += "file://gsm-activate.sh"
SRC_URI += "file://gsm-activate.service"

do_install() {
  install -d ${D}${systemd_unitdir}/system
  install -m 0644 ${WORKDIR}/gsm-activate.service ${D}${systemd_unitdir}/system
  install -d ${D}/usr/services/gsm-activate
  install -m 0500 ${WORKDIR}/gsm-activate.sh ${D}/usr/services/gsm-activate

}

FILES_${PN} += "${systemd_unitdir}/system"
FILES_${PN} += "/usr/services/gsm-activate"
