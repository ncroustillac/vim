// standard
#include <errno.h>
#include <fcntl.h>
#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <string.h>
#include <sys/types.h>
#include <termios.h>
#include <unistd.h>

//------------------------------------------------------------------------------
// Defines
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
// Local types
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
// Forward declaration
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
// Private_variable
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
// Main entry
//------------------------------------------------------------------------------
int main(int argc, char *argv[])
{
    char action;
    int rc = 0, fd = 0;
    char buffer[128];
    struct termios newtio;

    while ( 1 )
    {
        scanf("%c", &action);
        if( 3 < atoi(&action) )
        {
            printf("Invalid command\n");
            close(fd);
            return rc;
        }

        sat_if_cmd_send
        if ( rc <= 0 )
        {
            printf("Error while sending command: %s\n", strerror(errno));
        }

         __fpurge(stdin);
    }

    return 0;
}
